<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBackground"
    android:id="@+id/Error_Layout"
    android:visibility="gone">

    <ImageView
        android:id="@+id/Error_ImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/no_result" />

    <TextView
        android:id="@+id/Error_TextView_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Error_ImageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:text="Error Title"
        android:textColor="@color/colorTextTitle"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Error_TextView_Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Error_TextView_Title"
        android:layout_centerInParent="true"
        android:text="Error Message"
        android:textColor="@color/colorTextSubtitle" />

    <Button
        android:id="@+id/Error_Button_Retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Error_TextView_Message"
        android:layout_centerInParent="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/colorAccent"
        android:text="RETRY"
        android:textColor="@color/white" />

</RelativeLayout>